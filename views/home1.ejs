            width: 48px;
            height: 48px;
            margin: 0 auto 16px;
            color: white;
            transition: transform 0.3s ease;
        }

        .nav-button:hover .nav-button-icon {
            transform: scale(1.1) rotate(5deg);
        }

        .nav-button-title {
            font-size: 20px;
            font-weight: 600;
            margin-bottom: 8px;
            color: white;
        }

        .nav-button-description {
            font-size: 14px;
            color: rgba(255, 255, 255, 0.8);
            line-height: 1.5;
        }

        /* About section */
        .about-card {
            background: rgba(31, 41, 55, 0.5);
            backdrop-filter: blur(10px);
